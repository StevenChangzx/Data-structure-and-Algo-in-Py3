# LeetCode 55 : Jump Game

# Greedy
class Solution:
    def canJump(self, nums: List[int]) -> bool:
        reach = 0
        for i, n in enumerate(nums):
            if i > reach:
                return False
            reach = max(reach, i + n)
        return True
        
  
# Greedy(from back
class Solution:
    def canJump(self, nums: List[int]) -> bool:
        goals=len(nums)-1
        
